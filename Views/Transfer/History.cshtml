@model List<Operation>

@foreach (var item in Model)
{
    <div class="card-item">
        <a class="card-item-type"><img width="25" class="me-2" src="/img/shopping-cart.png"/><b>Debit</b></a>
        <div class="row mt-5">
            <div class="col-6">
                <div class="row mt-4">
                    <div class="col-3">
                        <b class="card-item-text">@item.Id</b>
                    </div>
                    <div class="col-3 offset-1">
                        <b class="card-item-text">@item.RecipientСardNumber</b>
                    </div>
                    <div class="col-3 offset-1">
                        <b class="card-item-text">@item.Amount</b>
                    </div>
                </div>
            </div>
            <div class="col-3 offset-2">
                <img width=330 src="/img/bank-card.png"/>
            </div>
        </div>
    </div>
}