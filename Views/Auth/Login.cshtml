@model LoginViewModel

<div class="container">
    <div class="row">
        <div class="col-md-1 offset-md-1">
            <img class="ellipse-1" src="/img/ellipse1.png" alt="ellipse">
        </div>
        <div class="col-md-6 offset-md-1">
            <div id="container">
                <br/>
                <h1>&bull; Login &bull;</h1>
                <br/>
                <div class="underline">
                </div>
                <form class="form" asp-action="Login" asp-anti-forgery="true">
                    <div class="form_group">
                        <label class="main-text" asp-for="Email">Email</label>
                        <input class="form_input" placeholder=" " type="text" asp-for="Email"/>
                        <span asp-validation-for="Email"/>
                    </div>
           
                    <div class="form_group">
                        <label class="main-text" asp-for="Password">Password</label>
                        <input class="form_input" asp-for="Password"/>
                        <span asp-validation-for="Password"/>
                    </div>
                    <dl></dl>
                        
                    <div>
                        <button class="nav-button"> Enter </button>
                    </div>
                    
                    <h1><a asp-controller="Auth" asp-action="Registration"> Don't have an account?  </a></h1>
                </form><!-- // End form -->
            </div><!-- // End #container -->
        </div>
    </div>
    </div>
<div class="cards">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3 cards">
                <img class="cards-img" src="/img/cards.png" alt="cards">
            </div>
        </div>
    </div>
</div>

