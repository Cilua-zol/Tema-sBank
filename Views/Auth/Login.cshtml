@model LoginViewModel

<div class="container">
    <div class="row">
        <div class="col-md-1 offset-md-1">
            <img class="ellipse-1" src="/img/ellipse1.png" alt="ellipse">
        </div>
        <div class="col-md-6 offset-md-1">
            <div id="container">
                <br/>
                <h1>&bull; Login &bull;</h1>
                <br/>
                <div class="underline">
                </div>
                <form class="form" asp-action="Login" asp-anti-forgery="true">
                    <div class="form-group">
                        <label class="main-text" asp-for="Email">Email</label>
                        <input class="form_input" type="email" asp-for="Email"/>
                        <span class="input-validation-error" asp-validation-for="Email" />
                    </div>
           
                    <div class="form-group">
                        <label class="main-text" asp-for="Password">Password</label><br />
                        <input type="password" class="form_input password_input" asp-for="Password"/>
                        <span class="input-validation-error" asp-validation-for="Password" />
                    </div>                                           
                    
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="submit">
                        <input type="submit" value="LOGIN" id="form_button" />
                    </div>
                </form><!-- // End form -->
                <a class="nav-item" style="padding:0; margin-left: 35px;" asp-controller="Auth" asp-action="Registration"> Don't have an account?  </a>
                <dl></dl>
            </div><!-- // End #container -->
        </div>
        <div class="col-md-1 offset-md-1">
            <img class="ellipse-2" src="/img/ellipse2.png" alt="ellipse">
        </div>
    </div>
</div>

